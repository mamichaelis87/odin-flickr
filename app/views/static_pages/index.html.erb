<h1>Boring Flickr API project</h1>
<%= form_with url: "static_pages/index", method: :get do |form| %>
  <%= form.label :user_id, "Enter an ID:" %>
  <%= form.text_field :user_id %>
  <%= form.submit "Submit" %>
<% end %>

<% if @photos %>
  <% @photos.each do |photo| %>
  <div>
    <%= image_tag("https://live.staticflickr.com/#{photo["server"]}/#{photo["id"]}_#{photo["secret"]}.jpg") %>
  </div>
  <% end %>
<% end %>

